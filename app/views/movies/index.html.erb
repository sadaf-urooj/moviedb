<div class="container mt-5">  
  <% if @genre.present? %>
  <h3><%= @genre.name %></h3>
   <% end %>
    <div class="row">    
      <% @movies.each do |movie| %>
        <div class="col-sm-3"><div class="card" style="width: 15rem;">
           <%= link_to movie_path(movie) do %>
          <div class="zoom">
            <%= image_tag(movie.cover, alt: "img 3", width: "100%") %>
          </div>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text"><%= movie.description %></p>

            <% movie.imdb_rating.to_i.times do %>
            <i class="fas fa-star text-warning"></i>
            <% end %> 
            <% if (movie.imdb_rating - movie.imdb_rating.to_i ) >= 0.5 %>
              <i class="fas fa-star-half-alt text-warning"></i>
            <% end %>

             <% if movie.up_vote_for?(current_user) %>
              <%= link_to movie_vote_path(movie, movie.votes.up.find_by(user_id: current_user.id)), class:"like-btn btn btn-primary btn-sm px-3 ", method: :delete, remote: true do %>        
                <span><i class="far fa-thumbs-up"></i></span>
                <span><%= movie.votes.up.size %></span>                           
              <% end %> 
              <% else %>
              <%= link_to movie_votes_path(movie, status: :up), class:"like-btn btn btn-outline-primary btn-sm px-3 ", method: :post, remote: true do %>        
                <span><i class="far fa-thumbs-up"></i></span>
                <span><%= movie.votes.up.size %></span>                           
              <% end %> 
              <% end %>

              <% if movie.down_vote_for?(current_user) %>
            <%= link_to movie_vote_path(movie, movie.votes.down.find_by(user_id: current_user.id)), class:"like-btn btn btn-primary btn-sm px-3 ", method: :delete, remote: true do %>        
                <span><i class="far fa-thumbs-down"></i></span>
                <span><%= movie.votes.down.size %></span>                           
              <% end %> 
              <% else %>
              <%= link_to movie_votes_path(movie, status: :down), class:"like-btn btn btn-outline-primary btn-sm px-3 ", method: :post, remote: true do %>        
                <span><i class="far fa-thumbs-down"></i></span>
                <span><%= movie.votes.down.size %></span>                           
              <% end %> 
              <% end %>           
        </div>
      </div>
    </div>
  <% end %>
</div>




 


